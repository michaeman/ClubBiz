<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => "form-signin", :role => "form" }) do |f| %>
	<h2 class="form-signin-heading">Forgot your password?</h2>
	<%= devise_error_messages! %>
	<%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "Email address", :style => "margin-bottom: 10px;" %>
	<%= f.submit "Send me reset instructions", :class => "btn btn-lg btn-primary btn-block" %>
<% end %>
