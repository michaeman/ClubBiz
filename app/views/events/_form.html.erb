<%= form_for(@event, :html => {:class => "form-signin", :role => "form"}) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :society %><br>
    <select class="form-control" name="event[society_id]">
      <%@admins = Admin.where(:user_id => current_user.id)%>
      <% @admins.each do |admin| %>
        <%@soc = Society.where(:id => admin.society_id).first%>
        <option value = "<%=@soc.id%>"><%=@soc.name%></option> 
		  <% end %>
	  </select>
  </div>

  <div class="form-group">
    <label>Event details</label>
	<%= f.text_field :title, :class => "form-control", :placeholder => "Event name" %>
	<%= f.text_field :description, :class => "form-control", :placeholder => "Event description" %>
	<%= f.text_field :location_address, :class => "form-control", :placeholder => "Location", :style => "margin-bottom: 10px;" %>
    </div>

  <div class="form-group">
    <%= f.label :start_time %><br>
    <%= f.datetime_select(:start_time, :start_year => Date.today.year, ampm: true) %>
  </div>

  <div class="form-group">
    <%= f.label :end_time %><br>
    <%= f.datetime_select(:end_time, :start_year => Date.today.year, ampm: true) %>
  </div>

  <div class="form-group">
    <label>Tickets</label>
    <%= f.text_field :max_tickets, :class => "form-control", :placeholder => "Number of available tickets" %>
	<div class="input-group">
	<span class="input-group-addon">$</span>
	<%= f.text_field :ticket_price, :class => "form-control", :placeholder => "Ticket price" %></div>
  </div>

   <div class = "form-group">
<b>Banner</b>
  <%= f.file_field :banner %>
</div>
 <div class = "form-group">
<b>Picture1</b>
  <%= f.file_field :picture1 %>
  </div>
  <div class = "form-group">
<b>Picture2</b>
  <%= f.file_field :picture2 %>
  </div>
  <div class = "form-group">
<b>Picture3</b>
  <%= f.file_field :picture3 %>
  </div>

  <%= f.submit :class => "btn btn-lg btn-primary btn-block" %>
  
<% end %>
