<h1></h1>

<td><%= link_to 'My Events', my_events_path, class: "btn btn-primary" %></td>

<td><%= link_to 'All Events', events_path, class: "btn btn-primary" %></td>

<div style="text-align:right">
  <td><%= link_to 'Create Event',new_event_path,class: "btn btn-success" %></td>
</div>

<h1>Listing my events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th> | </th>
      <th> | </th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td> | </td>
        <td> | </td>
        <td><%= event.description %></td>
        <% if user_signed_in? %>
        	<td><%= link_to 'Show', event, class: "btn btn-primary" %></td>
	        <td><%= link_to 'Edit', edit_event_path(event), class: "btn btn-primary" %></td>
	        <td><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"%></td>
	     <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
